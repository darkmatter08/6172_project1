# Boundary condition tests
# Weird array sizes, and weird rotation amounts on the bounds of the possible size
#
# 0: empty bit arrays, not supported
# t 0
# n
# r 0 0 0
# e
# r 0 0 1
# e
# r 0 0 9223372036854775807
# e
# r 0 0 -9223372036854775808
# e

# 1: empty sub arrays
t 1
n 1000110101010101010001110011

r 0 0 0
e 1000110101010101010001110011

r 0 0 9223372036854775807
e 1000110101010101010001110011

r 0 0 -9223372036854775808
e 1000110101010101010001110011

r 1 0 0
e 1000110101010101010001110011

r 2 0 -1
e 1000110101010101010001110011

r 3 0 9223372036854775807
e 1000110101010101010001110011

r 4 0 -9223372036854775808
e 1000110101010101010001110011

r 27 0 9223372036854775807
e 1000110101010101010001110011

# 2: Size 1 sub arrays
t 2
n 1000110101010101010001110011

r 0 1 0
e 1000110101010101010001110011

r 0 1 9223372036854775807
e 1000110101010101010001110011

r 0 1 -9223372036854775808
e 1000110101010101010001110011

r 1 1 0
e 1000110101010101010001110011

r 2 1 -1
e 1000110101010101010001110011

r 3 1 9223372036854775807
e 1000110101010101010001110011

r 4 1 -9223372036854775808
e 1000110101010101010001110011

r 27 1 9223372036854775807
e 1000110101010101010001110011

# 4: Full array rotation
t 4
n 1000110101010101010001110011

r 0 28 1
e 1100011010101010101000111001

r 0 28 2
e 0111000110101010101010001110

r 0 28 3
e 1100111000110101010101010001

r 0 28 4
e 0001110011100011010101010101
