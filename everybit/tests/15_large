# Instructions for writing a test:
#
# t: initializes new test
# n: initializes bit array
# r: rotates bit array subset at offset, length by amount
# e: expects raw bit array value

# 64 bit
t 0

n 10010110100101010101111010100101101010001100000011110000110111111
r 0 64 -1
e 00101101001010101011110101001011010100011000000111100001101111111

r 0 64 0
e 00101101001010101011110101001011010100011000000111100001101111111

r 0 64 1
e 10010110100101010101111010100101101010001100000011110000110111111

r 3 43 22
e 10010100101101010001100001011010010101010111100011110000110111111

# 67 bit
t 1
n 10010110100101010101111010100101101010001100000011110000110111111101
r 3 43 22
e 10010100101101010001100001011010010101010111100011110000110111111101

r 3 43 -12
e 10010001100001011010010101010111101010010110100011110000110111111101

# Zeroes
t 2
n 00000000000000000000000000000000000000000000000000000
r 0 53 71
e 00000000000000000000000000000000000000000000000000000

r 52 1 3
e 00000000000000000000000000000000000000000000000000000

r 0 1 -3
e 00000000000000000000000000000000000000000000000000000 

# Ones
t 3
n 11111111111111111111111111111111111111111111111111111
r 3 35 71
e 11111111111111111111111111111111111111111111111111111

r 52 1 -3
e 11111111111111111111111111111111111111111111111111111

r 0 1 3
e 11111111111111111111111111111111111111111111111111111

